@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Başlık Düzenleme</h2>

@*BeginForm() = Eklemeler, güncellemeler işlemlerinde kullanılan html yardımcısıdır. Üç tane parametresi vardır. Birinci parametre üzerinde çalıştığımız ActionResult ismi, ikinci parametre üzerinde çalıştığımız Controller ismi, üçüncü parametre FormMethod'un değeri yani post ya da get işlemi*@

@using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Tarih")
        @Html.TextBoxFor(x => x.HeadingDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingDate, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Başlık ID")
        @Html.TextBoxFor(x => x.HeadingID, new { @class = "form-control" })
        <br />
        @Html.Label("Yazar ID")
        @Html.TextBoxFor(x => x.WriterID, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterID, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Kategori ID")
        @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryID, "", new { @class = "text-danger" })
        <br />
        <button class="btn btn-success">Güncelle</button>
    </div>
}
